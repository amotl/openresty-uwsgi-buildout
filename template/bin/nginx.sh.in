#!/bin/sh
NGINX_DIR=${openresty:location}/nginx
PIDFILE=${buildout:directory}/var/logs/nginx.pid
case "$1" in
    checkconfig)
        LD_LIBRARY_PATH=$NGINX_DIR/lib $NGINX_DIR/sbin/nginx -c ${buildout:directory}/etc/nginx.conf -t
        ;;
    start)
        LD_LIBRARY_PATH=$NGINX_DIR/lib $NGINX_DIR/sbin/nginx -c ${buildout:directory}/etc/nginx.conf
        ;;
    stop)
        kill -QUIT $(cat $PIDFILE)
        ;;
    reload)
        kill -HUP $(cat $PIDFILE)
        ;;
    newlogs)
        kill -USR1 $(cat $PIDFILE)
        ;;
    restart|force-reload)
        $0 stop
        sleep 1
        $0 start
        ;;
      *)
        echo "Usage: $0 {checkconfig|start|stop|restart|reload|force-reload|newlogs}" >&2
        exit 1
        ;;
    esac
